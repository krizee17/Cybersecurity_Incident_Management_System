{% extends "base.html.twig" %}

{% block title %}Dashboard - SecureWatch Incident Management{% endblock %}

{% block content %}
<!-- Filter Tabs -->
<div class="filter-tabs">
    <button class="filter-tab active">All Incidents</button>
    <button class="filter-tab">Critical</button>
    <button class="filter-tab">Active</button>
    <button class="filter-tab">Resolved</button>
    <button class="filter-tab">Archived</button>
</div>

<!-- Search and Actions Bar -->
<div class="search-actions-bar">
    <div class="search-bar">
        <i class="fas fa-search"></i>
        <input type="text" id="search-input" placeholder="Search incidents..." onkeyup="handleSearch(event)">
    </div>
    <div class="action-buttons">
        <button class="btn-filter" onclick="openFilterModal()">
            <i class="fas fa-filter"></i>
            Filter
        </button>
        <button class="btn-export" onclick="exportIncidents()">
            <i class="fas fa-download"></i>
            Export
        </button>
    </div>
</div>

<!-- Metrics Cards -->
<div class="metrics-grid" id="stats-grid">
    <div class="metric-card metric-active">
        <div class="metric-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="metric-value" id="active-incidents">{{ stats.active_incidents|default(23) }}</div>
        <div class="metric-label">Active Incidents</div>
    </div>
    
    <div class="metric-card metric-time">
        <div class="metric-icon">
            <i class="fas fa-clock"></i>
        </div>
        <div class="metric-value" id="avg-response-time">{{ stats.avg_response_time|default('2.4h') }}</div>
        <div class="metric-label">Avg Response Time</div>
    </div>
    
    <div class="metric-card metric-resolved">
        <div class="metric-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="metric-value" id="resolved-month">{{ stats.resolved_this_month|default(156) }}</div>
        <div class="metric-label">Resolved This Month</div>
    </div>
    
    <div class="metric-card metric-systems">
        <div class="metric-icon">
            <i class="fas fa-shield-alt"></i>
        </div>
        <div class="metric-value" id="protected-systems">{{ stats.protected_systems|default(342) }}</div>
        <div class="metric-label">Protected Systems</div>
    </div>
</div>

<!-- Recent Incidents Section -->
<div class="recent-incidents-section">
    <div class="section-header">
        <h3 class="section-title">Recent Incidents</h3>
    </div>
    
    <table class="incident-table" id="recent-table">
        <thead>
            <tr>
                <th><input type="checkbox"></th>
                <th>ID</th>
                <th>TITLE</th>
                <th>SEVERITY</th>
                <th>STATUS</th>
                <th>ASSIGNED</th>
                <th>ACT</th>
            </tr>
        </thead>
        <tbody>
            {% if recent_incidents is empty %}
                <tr>
                    <td colspan="7" style="text-align: center; padding: 40px; color: var(--text-secondary);">
                        No incidents found
                    </td>
                </tr>
            {% else %}
                {% for incident in recent_incidents %}
                    <tr>
                        <td><input type="checkbox"></td>
                        <td class="incident-id">INC-{{ incident.id }}</td>
                        <td>
                            <div class="incident-title-group">
                                <div class="incident-title">{{ incident.incident_type|escape }}</div>
                                <div class="incident-meta">
                                    <i class="fas fa-circle" style="font-size: 4px;"></i>
                                    <span>{{ incident.system_name|escape }}</span>
                                    <i class="fas fa-circle" style="font-size: 4px;"></i>
                                    <span>{{ incident.date_time|date_format('g:i A')|default('15 min ago') }}</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="severity-dot severity-{{ incident.severity|lower }}"></span>
                            <span style="font-weight: 500;">{{ incident.severity|escape }}</span>
                        </td>
                        <td>
                            {% if incident.status == 'Investigating' %}
                                <span class="status-badge status-investigating">
                                    <i class="fas fa-search" style="font-size: 10px;"></i>
                                    {{ incident.status|escape }}
                                </span>
                            {% elseif incident.status == 'Resolved' %}
                                <span class="status-badge status-resolved">
                                    <i class="fas fa-check" style="font-size: 10px;"></i>
                                    {{ incident.status|escape }}
                                </span>
                            {% elseif incident.status == 'Detected' %}
                                <span class="status-badge status-in-progress">
                                    <i class="fas fa-circle" style="font-size: 6px;"></i>
                                    In Progress
                                </span>
                            {% else %}
                                <span class="status-badge status-in-progress">
                                    <i class="fas fa-circle" style="font-size: 6px;"></i>
                                    {{ incident.status|escape }}
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="assigned-avatar">
                                {{ incident.system_name|slice(0, 1)|upper }}
                            </div>
                        </td>
                        <td>
                            <a href="incident_view.php?id={{ incident.id }}" class="action-icon">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>

<!-- Filter Modal -->
<div id="filter-modal" class="filter-modal" style="display: none;">
    <div class="filter-modal-content">
        <div class="filter-modal-header">
            <h3>Filter Incidents</h3>
            <button class="filter-modal-close" onclick="closeFilterModal()">&times;</button>
        </div>
        <div class="filter-modal-body">
            <div class="form-group">
                <label>Severity</label>
                <select id="filter-severity">
                    <option value="">All</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                    <option value="Critical">Critical</option>
                </select>
            </div>
            <div class="form-group">
                <label>Status</label>
                <select id="filter-status">
                    <option value="">All</option>
                    <option value="Detected">Detected</option>
                    <option value="Investigating">Investigating</option>
                    <option value="Resolved">Resolved</option>
                </select>
            </div>
            <div class="form-group">
                <label>Affected System</label>
                <select id="filter-system">
                    <option value="">All Systems</option>
                </select>
            </div>
            <div class="form-group">
                <label>Date From</label>
                <input type="date" id="filter-date-from">
            </div>
            <div class="form-group">
                <label>Date To</label>
                <input type="date" id="filter-date-to">
            </div>
        </div>
        <div class="filter-modal-footer">
            <button class="btn btn-secondary" onclick="clearFilters()">Clear</button>
            <button class="btn btn-primary" onclick="applyFilters()">Apply Filters</button>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
    let currentFilters = {
        severity: '',
        status: '',
        system_id: '',
        date_from: '',
        date_to: '',
        search_text: ''
    };
    
    // Load systems for filter dropdown
    function loadSystemsForFilter() {
        fetch('incidents.php?ajax=systems')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const select = document.getElementById('filter-system');
                    if (select) {
                        select.innerHTML = '<option value="">All Systems</option>';
                        data.systems.forEach(system => {
                            const option = document.createElement('option');
                            option.value = system.id;
                            option.textContent = system.name + ' (' + system.type + ')';
                            select.appendChild(option);
                        });
                    }
                }
            })
            .catch(error => console.error('Error loading systems:', error));
    }
    
    // Search functionality
    function handleSearch(event) {
        if (event.key === 'Enter' || event.keyCode === 13) {
            currentFilters.search_text = event.target.value;
            searchIncidents();
        }
    }
    
    // Search incidents
    function searchIncidents() {
        const params = new URLSearchParams();
        Object.keys(currentFilters).forEach(key => {
            if (currentFilters[key]) {
                params.append(key, currentFilters[key]);
            }
        });
        
        fetch('api/search_incidents.php?' + params.toString())
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    updateIncidentsTable(data.data);
                }
            })
            .catch(error => console.error('Error searching incidents:', error));
    }
    
    // Open filter modal
    function openFilterModal() {
        document.getElementById('filter-modal').style.display = 'flex';
        loadSystemsForFilter();
    }
    
    // Close filter modal
    function closeFilterModal() {
        document.getElementById('filter-modal').style.display = 'none';
    }
    
    // Apply filters
    function applyFilters() {
        currentFilters.severity = document.getElementById('filter-severity').value;
        currentFilters.status = document.getElementById('filter-status').value;
        currentFilters.system_id = document.getElementById('filter-system').value;
        currentFilters.date_from = document.getElementById('filter-date-from').value;
        currentFilters.date_to = document.getElementById('filter-date-to').value;
        
        closeFilterModal();
        searchIncidents();
    }
    
    // Clear filters
    function clearFilters() {
        document.getElementById('filter-severity').value = '';
        document.getElementById('filter-status').value = '';
        document.getElementById('filter-system').value = '';
        document.getElementById('filter-date-from').value = '';
        document.getElementById('filter-date-to').value = '';
        document.getElementById('search-input').value = '';
        
        currentFilters = {
            severity: '',
            status: '',
            system_id: '',
            date_from: '',
            date_to: '',
            search_text: ''
        };
        
        searchIncidents();
    }
    
    // Export incidents
    function exportIncidents() {
        const params = new URLSearchParams();
        Object.keys(currentFilters).forEach(key => {
            if (currentFilters[key]) {
                params.append(key, currentFilters[key]);
            }
        });
        
        window.location.href = 'api/export_incidents.php?' + params.toString();
    }
    
    // Update incidents table
    function updateIncidentsTable(incidents) {
        const tbody = document.querySelector('#recent-table tbody');
        if (!tbody) return;
        
        if (incidents.length === 0) {
            tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 40px; color: var(--text-secondary);">No incidents found</td></tr>';
            return;
        }
        
        tbody.innerHTML = incidents.map(incident => {
            const statusBadge = getStatusBadge(incident.status);
            const severityClass = incident.severity.toLowerCase();
            const systemInitial = (incident.system_name || 'S').charAt(0).toUpperCase();
            const dateTime = formatDateTime(incident.date_time);
            
            return `
                <tr>
                    <td><input type="checkbox"></td>
                    <td class="incident-id">INC-${incident.id}</td>
                    <td>
                        <div class="incident-title-group">
                            <div class="incident-title">${escapeHtml(incident.incident_type)}</div>
                            <div class="incident-meta">
                                <i class="fas fa-circle" style="font-size: 4px;"></i>
                                <span>${escapeHtml(incident.system_name || '')}</span>
                                <i class="fas fa-circle" style="font-size: 4px;"></i>
                                <span>${dateTime}</span>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="severity-dot severity-${severityClass}"></span>
                        <span style="font-weight: 500;">${escapeHtml(incident.severity)}</span>
                    </td>
                    <td>${statusBadge}</td>
                    <td>
                        <div class="assigned-avatar">${systemInitial}</div>
                    </td>
                    <td>
                        <a href="incident_view.php?id=${incident.id}" class="action-icon">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                </tr>
            `;
        }).join('');
    }
    
    // Auto-refresh dashboard every 30 seconds
    setInterval(function() {
        refreshDashboard();
    }, 30000);
    
    // Initial load
    document.addEventListener('DOMContentLoaded', function() {
        refreshDashboard();
        // Close modal when clicking outside
        document.getElementById('filter-modal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeFilterModal();
            }
        });
    });
</script>
{% endblock %}

