{% extends "base.html.twig" %}

{% block title %}Add System - Cybersecurity Incident Management{% endblock %}

{% block content %}
<div class="page-header">
    <h2>Add New System/Asset</h2>
    <a href="systems.php" class="btn btn-secondary">Back to Systems</a>
</div>

{% if errors is not empty %}
    <div class="alert alert-error">
        <ul>
            {% for error in errors %}
                <li>{{ error|escape }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

<form method="POST" action="" class="form">
    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
    
    <div class="form-group">
        <label for="name">System Name *</label>
        <input type="text" id="name" name="name" required 
               value="{{ form_data.name|default('')|escape }}"
               placeholder="e.g., Web Server 01, Customer Database">
    </div>

    <div class="form-group">
        <label for="type">System Type *</label>
        <select id="type" name="type" required>
            <option value="">Select type</option>
            <option value="Server" {% if form_data.type|default('') == 'Server' %}selected{% endif %}>Server</option>
            <option value="Application" {% if form_data.type|default('') == 'Application' %}selected{% endif %}>Application</option>
            <option value="Database" {% if form_data.type|default('') == 'Database' %}selected{% endif %}>Database</option>
            <option value="Firewall" {% if form_data.type|default('') == 'Firewall' %}selected{% endif %}>Firewall</option>
            <option value="Mail Gateway" {% if form_data.type|default('') == 'Mail Gateway' %}selected{% endif %}>Mail Gateway</option>
        </select>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="5" 
                  placeholder="Enter system description...">{{ form_data.description|default('')|escape }}</textarea>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Add System</button>
        <a href="systems.php" class="btn btn-secondary">Cancel</a>
    </div>
</form>
{% endblock %}

