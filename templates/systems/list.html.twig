{% extends "base.html.twig" %}

{% block title %}Systems - SecureWatch Incident Management{% endblock %}

{% block content %}
<div class="page-header">
    <h2>Systems/Assets</h2>
    <a href="system_create.php" class="btn btn-primary">Add New System</a>
</div>

<div class="table-container">
    <table class="incident-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Description</th>
                <th>Incident Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if systems is empty %}
                <tr>
                    <td colspan="6" style="text-align: center; padding: 40px; color: var(--text-secondary);">
                        No systems found. <a href="system_create.php" style="color: var(--primary-purple);">Add one</a>
                    </td>
                </tr>
            {% else %}
                {% for system in systems %}
                    <tr>
                        <td class="incident-id">{{ system.id }}</td>
                        <td>
                            <div style="font-weight: 500; color: var(--text-primary);">{{ system.name|escape }}</div>
                        </td>
                        <td>
                            <span class="type-badge" style="background-color: var(--bg-gray); color: var(--text-primary); padding: 4px 12px; border-radius: 6px; font-size: 12px; font-weight: 500;">
                                {{ system.type|escape }}
                            </span>
                        </td>
                        <td style="color: var(--text-secondary);">{{ system.description|default('N/A')|escape }}</td>
                        <td>
                            <span style="font-weight: 500;">{{ system.incident_count }}</span>
                        </td>
                        <td>
                            <div style="display: flex; gap: 8px;">
                                <a href="system_view.php?id={{ system.id }}" class="action-icon" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="system_edit.php?id={{ system.id }}" class="action-icon" title="Edit" style="color: var(--warning);">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="system_delete.php?id={{ system.id }}" class="action-icon" title="Delete" style="color: var(--danger);" onclick="return confirm('Are you sure you want to delete this system? This will fail if incidents reference it.');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
