{% extends "base.html.twig" %}

{% block title %}Search - Cybersecurity Incident Management{% endblock %}

{% block content %}
<div class="page-header">
    <h2>Search Incidents</h2>
</div>

<form method="GET" action="" class="form search-form">
    <div class="form-row">
        <div class="form-group">
            <label for="incident_type">Incident Type</label>
            <input type="text" id="incident_type" name="incident_type" 
                   value="{{ search_params.incident_type|default('')|escape }}"
                   placeholder="e.g., Phishing, Malware">
        </div>

        <div class="form-group">
            <label for="severity">Severity</label>
            <select id="severity" name="severity">
                <option value="">All</option>
                <option value="Low" {% if search_params.severity|default('') == 'Low' %}selected{% endif %}>Low</option>
                <option value="Medium" {% if search_params.severity|default('') == 'Medium' %}selected{% endif %}>Medium</option>
                <option value="High" {% if search_params.severity|default('') == 'High' %}selected{% endif %}>High</option>
                <option value="Critical" {% if search_params.severity|default('') == 'Critical' %}selected{% endif %}>Critical</option>
            </select>
        </div>

        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status">
                <option value="">All</option>
                <option value="Detected" {% if search_params.status|default('') == 'Detected' %}selected{% endif %}>Detected</option>
                <option value="Investigating" {% if search_params.status|default('') == 'Investigating' %}selected{% endif %}>Investigating</option>
                <option value="Resolved" {% if search_params.status|default('') == 'Resolved' %}selected{% endif %}>Resolved</option>
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label for="system_id">Affected System</label>
            <select id="system_id" name="system_id">
                <option value="">All Systems</option>
                {% for system in systems %}
                    <option value="{{ system.id }}" 
                            {% if search_params.system_id|default(0) == system.id %}selected{% endif %}>
                        {{ system.name|escape }} ({{ system.type|escape }})
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="date_from">Date From</label>
            <input type="date" id="date_from" name="date_from" 
                   value="{{ search_params.date_from|default('')|escape }}">
        </div>

        <div class="form-group">
            <label for="date_to">Date To</label>
            <input type="date" id="date_to" name="date_to" 
                   value="{{ search_params.date_to|default('')|escape }}">
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="search.php" class="btn btn-secondary">Clear</a>
    </div>
</form>

{% if has_search %}
    <div class="search-results">
        <h3>Search Results ({{ results|length }})</h3>
        
        {% if results is empty %}
            <p class="no-results">No incidents found matching your criteria.</p>
        {% else %}
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Date & Time</th>
                            <th>System</th>
                            <th>Severity</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for incident in results %}
                            <tr>
                                <td>{{ incident.id }}</td>
                                <td>{{ incident.incident_type|escape }}</td>
                                <td>{{ incident.date_time|escape }}</td>
                                <td>{{ incident.system_name|escape }} ({{ incident.system_type|escape }})</td>
                                <td><span class="severity-badge severity-{{ incident.severity|lower }}">{{ incident.severity|escape }}</span></td>
                                <td><span class="status-badge status-{{ incident.status|lower }}">{{ incident.status|escape }}</span></td>
                                <td>
                                    <a href="incident_view.php?id={{ incident.id }}" class="btn btn-sm btn-view">View</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endif %}
{% endblock %}

